!!! html
%html
  %head
    %title Chat
    %meta{ name: "viewport", content: "width=device-width,initial-scale=1" }
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all'
    = stimulus_include_tags
    = javascript_include_tag "turbo", type: "module-shim"
    = yield :head
    %meta{ name: "turbo-root", content: "/rooms" }
    = stylesheet_link_tag href: "https://fonts.googleapis.com", rel: "preconnect"
    = stylesheet_link_tag rel: "preconnect", href: "https://fonts.gstatic.com", crossorigin: "anonymous"
    = stylesheet_link_tag href: "https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
  %body
    = render partial: 'layouts/navigation'
    %div#content
      = yield
    = render partial: 'layouts/footer'